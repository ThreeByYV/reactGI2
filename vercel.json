{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json", 
      "use": "@vercel/node",        
      "config": {
        "includeFiles": ["server/**"]  
      }
    },
    {
      "src": "package.json",           
      "use": "@vercel/static-build",   
      "config": {
        "distDir": "dist"            
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",             
      "dest": "server/api/$1"         
    },
    {
      "src": "/(.*)",                
      "dest": "/$1"                   
    }
  ],
  "env": {
    "NODE_ENV": "production"          
}
}
